class Pet:
    def __init__(self, Pet_id, Pet_name, Pet_weight):
        self.Pet_id = Pet_id
        self.Pet_name = Pet_name
        self.Pet_weight =Pet_weight
 
    def introduce(self):
        print(f"我的寵物編號{self.Pet_id}，寵物的名字是{self.Pet_name}，寵物的體重是{self.Pet_weight}。")
 
# 建立寵物物件
pet1 = Pet(Pet_id="7414", Pet_name="Parker", Pet_weight="10kg")
 
# 使用方法介紹寵物
pet1.introduce()
